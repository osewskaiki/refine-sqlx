{
  "name": "d1-rest-api-template",
  "version": "1.0.0",
  "description": "Complete REST API example using refine-sqlx with Cloudflare D1",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 execute ${D1_DATABASE_NAME:-my-app-db} --file=./migrations/0000_initial.sql",
    "db:studio": "drizzle-kit studio",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "refine-sqlx": "^0.3.0",
    "@refinedev/core": "^4.57.10",
    "drizzle-orm": "^0.44.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "drizzle-kit": "^0.31.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.102.0"
  }
}
