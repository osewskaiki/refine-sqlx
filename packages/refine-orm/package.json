{
  "name": "refine-orm",
  "description": "Type-safe ORM data provider for Refine - Supports PostgreSQL, MySQL, SQLite with Drizzle ORM and native runtimes",
  "version": "0.2.1",
  "license": "MIT",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "sideEffects": false,
  "typings": "dist/index.d.mts",
  "author": "zuohuadong",
  "keywords": [
    "refine",
    "data provider",
    "orm",
    "drizzle",
    "postgresql",
    "mysql",
    "sql",
    "database",
    "type-safe",
    "typescript"
  ],
  "private": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zuohuadong/refine-sqlxx.git",
    "directory": "packages/refine-orm"
  },
  "bugs": {
    "url": "https://github.com/zuohuadong/refine-sqlx/issues"
  },
  "homepage": "https://github.com/zuohuadong/refine-sqlx/tree/main/packages/refine-orm#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup --minify",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:bun": "bun test",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run test && npm run build",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "peerDependencies": {
    "@refinedev/core": "^5.0.4",
    "drizzle-orm": "^0.44.4"
  },
  "peerDependenciesMeta": {
    "@refinedev/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@refinedev/core": "^5.0.4",
    "@types/jest": "^30.0.0",
    "drizzle-orm": "^0.44.4",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5"
  }
}
