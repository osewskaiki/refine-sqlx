{
  "name": "refine-sqlx",
  "version": "0.0.1",
  "description": "A Refine corss database data provider.",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medz/refine-sqlx.git"
  },
  "scripts": {
    "test": "jest --testPathIgnorePatterns=\"test/integration\"",
    "test:bun": "bun test test/",
    "test:integration-bun": "bun test test/integration/bun.test.ts",
    "test:integration-node": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/integration/node.test.ts",
    "test:integration-better-sqlite3": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/integration/better-sqlite3.test.ts",
    "build": "unbuild",
    "format": "prettier --write ."
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251011.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.7.2",
    "better-sqlite3": "^12.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "unbuild": "^3.6.1"
  },
  "peerDependencies": {
    "@refinedev/core": "^4.57.10"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.4.1"
  }
}
